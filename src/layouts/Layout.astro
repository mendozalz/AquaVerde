    width: 100vw;
    min-height: 100vh;
  }

  /* Barra de scroll */

  /* Estilos para la barra de scroll */
  ::-webkit-scrollbar {
    width: 12px; /* Ancho de la barra vertical */
    height: 12px; /* Ancho de la barra horizontal */
  }

  /* Fondo verde para la barra de scroll */
  ::-webkit-scrollbar-track {
    background-color: var(--naranjaBg); /* Verde */
  }

  /* Línea fina (thumb) de color naranja */
  ::-webkit-scrollbar-thumb {
    background-color: var(--dorado); /* Naranja */
    border-radius: 10px; /* Bordes redondeados */
    border: 2px solid var(--naranjaBg); /* Espacio entre el track y el thumb */
  }

  /* Hover del thumb para mejor interacción */
  ::-webkit-scrollbar-thumb:hover {
    background-color: #ff8c00; /* Naranja más oscuro cuando se pasa el ratón */
  }

